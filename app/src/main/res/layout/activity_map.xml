<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       tools:context="com.platypii.baseline.MapActivity"
       tools:parentTag="FrameLayout">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.platypii.baseline.TouchableMapFragment" />

    <com.platypii.baseline.altimeter.AnalogAltimeter
        android:id="@+id/analogAltimeter"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="right|bottom" />

    <include
        layout="@layout/flight_stats" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="left|top"
        android:layout_margin="2dp"
        android:background="@drawable/panel"
        android:contentDescription="@string/map_pin"
        android:src="@drawable/ic_pin"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/crosshair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_crosshair"
        android:contentDescription="@string/map_crosshair"
        android:visibility="gone" />

</merge>
