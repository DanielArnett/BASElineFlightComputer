<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:id="@+id/startButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:onClick="clickStart"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Start Logging" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/startButton"
        style="?android:attr/buttonBarButtonStyle"
        android:onClick="clickStop"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Stop Logging"
        android:enabled="false" />

    <Button
        android:id="@+id/jumpsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopButton"
        style="?android:attr/buttonBarButtonStyle"
        android:onClick="clickJumps"
        android:text="Tracks" />

    <Button
        android:id="@+id/sensorsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/jumpsButton"
        style="?android:attr/buttonBarButtonStyle"
        android:onClick="clickSensors"
        android:text="Sensor Info" />

    <TextView
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensorsButton"
        android:textSize="48sp"
        android:textIsSelectable="false"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="" />

</RelativeLayout>
