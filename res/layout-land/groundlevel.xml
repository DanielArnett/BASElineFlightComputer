<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.platypii.baseline.ui.GroundLevelWidget
        android:id="@+id/groundLevelWidget"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

	<LinearLayout
	    android:layout_width="160dp"
	    android:layout_height="match_parent"
	    android:layout_gravity="bottom"
	    android:orientation="vertical" >

	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
	        android:textColor="#ffffffff"
	        android:textSize="28dp"
	        android:textStyle="bold"
	        android:text="Altitude" />
	    
		<TextView
			android:id="@+id/altitudeLabel"
			android:layout_width="match_parent"
			android:layout_height="0dip"
			android:layout_weight="1"
			android:gravity="center_horizontal"
			android:textColor="#ffffffff"
			android:textSize="36dp"
			android:textStyle="bold" />
   
		<LinearLayout
	        style="?android:attr/buttonBarStyle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
    	    android:orientation="vertical" >
            
			<Button
		        android:id="@+id/zeroGroundButton"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
		   	    android:onClick="clickZero"
		        android:text="Zero Altitude" />
		
		    <Button
		        android:id="@+id/setGroundButton"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
		   	    android:onClick="clickSet"
		        android:text="Set Altitude" />
		
		    <Button
		        android:id="@+id/cancelGroundButton"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
				style="?android:attr/buttonBarButtonStyle"
		   	    android:onClick="clickCancel"
		        android:text="Cancel" />
	    
	    </LinearLayout>
	    
    </LinearLayout>
	    
</LinearLayout>


