<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       tools:context="com.platypii.baseline.WearActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/altiButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickAltimeter"
            android:src="@drawable/alti"
            android:contentDescription="@string/action_altimeter"
            style="@android:style/Widget.Material.Button.Borderless" />

        <ImageButton
            android:id="@+id/polarButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickPolar"
            android:src="@drawable/polar"
            android:contentDescription="@string/action_polar"
            style="@android:style/Widget.Material.Button.Borderless" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickSettings"
            android:src="@drawable/gears"
            android:contentDescription="@string/action_settings"
            style="@android:style/Widget.Material.Button.Borderless" />

    </LinearLayout>

</LinearLayout>
